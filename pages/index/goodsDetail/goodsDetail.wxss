  height: 50rpx;
}

.goodsDetail-bottom text {
  display: block;
  font-size: 20rpx;
  color: rgb(177, 177, 177);
}

 .goodsDetail-bottom .ifgoodslikescolor{
color: rgb(255, 82, 51);
}

