.chatinput {
  position: static;
  margin: 10rpx 0 10rpx 10rpx;
  /* border: 1px solid black; */
  border-radius: 40rpx;
  float: left;
  width: 560rpx;
  font-size: 44rpx;
  height: 80rpx;
  background-color: white;
  padding: 0rpx 0  0rpx 0rpx ;
  /* height: 80rpx; */
}




.input_wrap button {
  margin: 10rpx 25rpx 10rpx 0rpx;
  width: 150rpx;
  height: 80rpx;
  font-size: 32rpx;
  float: right;
border-radius: 40rpx;
background-color: rgb(86, 207, 255);
color: white;
}

.input_wrap button::after {
border-radius: 80rpx;
border: none;
}

.input_icon_wrap{
  width: 750rpx;
  height: 70rpx;
  float: left;
  background-color: rgb(235, 235, 235); 
}

.input_wrap .input_icon{
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin: 10rpx 0 0 30rpx; 
}

.system_card{
  width: 300rpx;
}
.system_card_title{
  text-align: center;
  padding: 0 0 20rpx 0;
  font-size: 26rpx;
  color: #333;
  border-bottom: 1rpx solid #aaa;
}

.system_card_content{
  display: flex;
  font-size: 26rpx;
  color: #333;
}

.newfocus_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

