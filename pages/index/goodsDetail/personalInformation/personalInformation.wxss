  margin: 8rpx;
  position: relative;
  margin-top: -50rpx;
}

.image {
  width: 100%;
  height: 300rpx;
  background-color: #eee;
}

.time {
  float: right;
  margin-top: 250rpx;
  color: #fff;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
  font-size: 24rpx;
}
