/* pages/communicatePage/chat.wxss */

page {
  background-color: rgba(232, 234, 235, 0.507);
}

/* 以下为聊天内容区 */
.mainbackground{
  float: left;
  padding: 0 0 170rpx 0;
  /* margin: 0 0 170rpx 0; */
  height:100%;
}
.chat_wrap_left, .chat_wrap_right {
  /* border: 1px 0 1rpx 0 solid rebeccapurple; */
  width: 750rpx;
  float: left;
  margin: 20rpx 0;
}

.chat_wrap_left .chat_image {
  width: 80rpx;
  height: 80rpx;
  /* border: 1px solid green; */
  border-radius: 40rpx;
  float: left;
  margin: 10rpx;
}

.chat_wrap_left .chat_bubble {
  float: left;
}

.chat_wrap_left .chat_content {
  display: flex;
}

.chat_wrap_left .chat_chattime {
  float: right;
}

.chat_wrap_right .chat_image {
  margin: 10rpx;
  width: 80rpx;
  height: 80rpx;
  /* border: 1px solid green; */
  border-radius: 40rpx;
  float: right;
}

.chat_wrap_right .chat_bubble {
  float: right;
}

.chat_wrap_right .chat_content {
  display: flex;
}

/* .chat_wrap_right .chat_content */

.chat_bubble_left {
  position: absolute;
  left: 115rpx;
  width: 0;
  height: 0;
  border-top: 15rpx solid transparent;
  border-right: 20rpx solid white;
  border-bottom: 15rpx solid transparent;
}
.chat_bubble_right {
  position: absolute;
  right: 115rpx;
  width: 0;
  height: 0;
  border-top: 15rpx solid transparent;
  border-left: 20rpx solid white;
  border-bottom: 15rpx solid transparent;
}

.chat_wrap_right .chat_chattime {
  float: left;
}

.chat_bubble {
  max-width: 400rpx;
  margin: auto 30rpx;
  /* border:1px solid red; */
  padding: 20rpx 20rpx 20rpx 20rpx;
  background-color: white;
  border-radius: 30rpx;
}

.chat_content {
  font-size: 30rpx;
  line-height: 40rpx;
  color: rgb(19, 19, 19);
  max-width: 400rpx;
}

.chat_chattime {
  font-size: 20rpx;
  color: rgb(221, 221, 221);
}

