.background_wrap {
  margin: 0;
  padding: 0;
  width: 750rpx;
  max-height: 400rpx;
  z-index: 0;
  overflow: hidden;
  border: none;
  /* border-bottom: 1rpx #f8440d solid; */
}

.background {
  opacity: 0.7;
  width: 850rpx;
  height: 500rpx;
  z-index: 0;
  margin: 0;
  filter: blur(10rpx);
  position: relative;
  left: -50rpx;
  top: -50rpx;
}

.head_img {
  /* border: 1rpx solid rgb(255, 68, 11); */
  border: 2rpx solid rgba(212, 212, 212, 0.8);
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin: 30rpx 0 0 30rpx;
}

.head_img1 {
  border: 2rpx solid rgba(10, 189, 227, 0.8);
}

.head_img2 {
  border: 2rpx solid rgba(255, 27, 11, 0.8);
}

.top {
  /* border: 1rpx solid white; *//* box-shadow: 4rpx 4rpx 8rpx 5rpx white; */
  border-radius: 30rpx;
  height: 400rpx;
  width: 700rpx;
  z-index: 1rpx;
  position: absolute;
  top: 0rpx;
  margin: 0 25rpx;
  display: flex;
  /* flex-direction: row; */
  flex-wrap: wrap;
}

.persionalinfo_wrap {
  /* border: 1rpx solid yellow; */
  display: block;
  width: 400rpx;
  margin: 0 0 0 40rpx;
  height: 200rpx;
}

.persionalinfo_wrap .nickname {
  margin: 50rpx 0 10rpx 0;
  color: rgb(0, 0, 0);
}

.fans {
  /* padding-left: 30rpx; */
  position: absolute;
  right: 0rpx;
  top: 70rpx;
  min-width: 100rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  display: block;
  float: right;
  /* border: 1rpx solid rebeccapurple; */
  background-color: white;
  border-radius: 35rpx 0 0 35rpx;
  text-align: center;
}

.fans text {
  /* float: right;*/
  margin: 0 10rpx;
  color: #666;
}

.persionalsign {
  margin-left: 25rpx;
  width: 650rpx;
  height: 140rpx;
  font-size: 28rpx;
  border-radius: 20rpx;
  color: #222;
  background-color: rgba(214, 214, 214, 0.295);
  /* display: block; */
}

.persionalsign text {
  margin: 20rpx 5rpx 0 5rpx;
}

.goodscards_wrap {
  width: 750rpx;
  margin: 30rpx auto;
  /* box-shadow: 1rpx 1rpx 5rpx 5rpx #ccc; */
}

.goodscards_wrap .toptab {
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  /* background-color: yellow; */
  text-align: center;
  line-height: 70rpx;
}

.goodscards {
  margin: 0 auto 50rpx auto;
  width: 700rpx;
  height: 450rpx;
  border-radius: 40rpx;
  overflow: hidden;
  background-color: red;
  z-index: 1；;
}

.goodscards image {
  width: 700rpx;
  height: 450rpx;
  z-index: 2；;
}

.goodsinfo_wrap {
  background-color: rgba(255, 255, 255, 0.849);
  z-index: 3;
  position: relative;
  top: -120rpx;
  height: 150rpx;
  /* bottom: 0; */
}

.title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 36rpx;
  height: 60rpx;
  margin-left: 20rpx;
  position: relative;
  bottom: -10rpx;
}

.price {
  color: red;
  margin-left: 20rpx;
  font-size: 30rpx;
}

