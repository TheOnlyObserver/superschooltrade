/* 以下为输入框区 */



.input_wrap {
  /* border: 1px solid red; */
  background-color: rgb(231, 231, 231);
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  /* margin: 50rpx 0 0 0; */
}

.chattextarea_wrap{
  width: 560rpx;
  min-height: 80rpx;
  max-height: 200rpx;
  position: static;
  float: left;
  border-radius: 40rpx;
  overflow: hidden;
 padding: 0 ;
 margin: 0 0 15rpx 0;
}

.chattextarea_wrap input{
  padding:0 15rpx 0 15rpx;
  margin: 10rpx 0 10rpx 20rpx;
  width: 500rpx;
  height: 80rpx;
  border-radius: 40rpx;

  line-height: 32rpx;
  background-color: white;
  font-size: 32rpx;

}

